---
import MMenu from "../molecules/m_menu.astro";
import ALogo from "../atoms/a_logo.astro";
const { homepage } = Astro.props;
---
<header
    class="fixed top-0 left-0 z-50 flex flex-row items-center w-full h-16 px-4 transition-all duration-100 ease-in-out xs:px-8 sm:px-16 sm:h-22 sm:pt-0"
    x-bind:class="[
        header === 'default' && 'bg-gray-900',
        header === 'white' && 'bg-white shadow-sm'
    ]"
>
    <ALogo homepage={homepage}/>
    <MMenu />
</header>
